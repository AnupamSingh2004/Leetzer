{
  "manifest_version": 3,
  "name": "LeetCode Code Analyzer",
  "version": "1.0.0",
  "description": "AI-powered code analysis, error detection, and optimization suggestions for LeetCode problems",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "dist/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["dist/content/content-bundled.js"],
      "css": ["dist/content/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "dist/popup/popup.html",
    "default_title": "LeetCode Code Analyzer"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/setup/apiSetup.html"],
      "matches": ["https://leetcode.com/*"]
    }
  ]
}
